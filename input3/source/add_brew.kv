<add_brew@Screen>:

    brew_num: brew_num
    brew_size: brew_size
    brand: brand
    batches: batches

    Label:
        size_hint: (.1, .03)
        pos_hint: {'x': .4, 'y': .6}
        font_size: 30
        text: 'Brew Number:'
    TextInput:
        id: brew_num
        size_hint: (.1, .05)
        pos_hint: {'x': .55, 'y': .6}
        font_size: 30

    Label:
        size_hint: (.1, .03)
        pos_hint: {'x': .4, 'y': .5}
        font_size: 30
        text: 'Brew Size:'
    TextInput:
        id: brew_size
        size_hint: (.1, .05)
        pos_hint: {'x': .55, 'y': .5}
        font_size: 30

    Label:
        size_hint: (.1, .03)
        pos_hint: {'x': .4, 'y': .4}
        font_size: 30
        text: 'Brew Brand:'
    TextInput:
        id: brand
        size_hint: (.1, .05)
        pos_hint: {'x': .55, 'y': .4}
        font_size: 30

    Label:
        size_hint: (.1, .03)
        pos_hint: {'x': .4, 'y': .3}
        font_size: 30
        text: 'Number of Batches:'
    TextInput:
        id: batches
        size_hint: (.1, .05)
        pos_hint: {'x': .55, 'y': .3}
        font_size: 30

    Button:
        size_hint: (.095, .075)
        pos_hint: {'x': .01, 'y': .7}
        text: 'Create Brew'
        font_size: 30
        on_press: app.root.create_brew()