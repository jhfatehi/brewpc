<BlankScreen@Screen>:
    screen: screen
    brew_num: brew_num
    batch_num: batch_num

    TextBox:
    	text: "Brew #"
    	pos_hint: {'x': .01, 'y': .91}
    Data:
    	id: brew_num
    	size_hint: (.05, .03)
    	pos_hint: {'x': .08, 'y': .91}
        input_filter: 'int'

    TextBox:
    	text: "Batch #"
    	pos_hint: {'x': .01, 'y': .87}
    Data:
    	id: batch_num
    	size_hint: (.015, .03)
    	pos_hint: {'x': .08, 'y': .87}
        input_filter: 'int'
    TextBox:
        text: "of"
        pos_hint: {'x': .0985, 'y': .875}
        font_size: 15   
    Target:
        id: tbatchs
        size_hint: (.015, .03)
        pos_hint: {'x': .11, 'y': .87}

    TextBox:
        text: "Brand"
        pos_hint: {'x': .01, 'y': .83}
    Target:
        id: tbrand
        pos_hint: {'x': .05, 'y': .83}
        size_hint: (.1, .03)

    Spinner:
        id: screen
        size_hint: (.095, .075)
        pos_hint: {'x': .01, 'y': .7}
        values: ['blank_screen', 'mash_screen']
        text: 'blank_screen'
        font_size: 25

    Button:
        size_hint: (.095, .075)
        pos_hint: {'x': .01, 'y': .6}
        text: 'Load'
        font_size: 25
        on_press: app.root.change_screen()
        on_release: app.root.db_read()

    Button:
        size_hint: (.095, .075)
        pos_hint: {'x': .01, 'y': .5}
        text: 'Save'
        font_size: 25
        on_press: app.root.db_write()

    Button:
        size_hint: (.095, .075)
        pos_hint: {'x': .01, 'y': .35}
        font_size: 25
        on_press: app.root.change_screen()
        on_release: app.root.db_read()

    Button:
        size_hint: (.095, .075)
        pos_hint: {'x': .01, 'y': .2}
        font_size: 25
        on_press: app.root.change_screen()
        on_release: app.root.db_read()