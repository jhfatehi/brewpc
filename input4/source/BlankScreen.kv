<BlankScreen@Screen>:

    canvas.before:
        Color:
            rgba: .83, .83, .83, 1
        Rectangle:
            pos: self.pos
            size: self.size

    brew_num: brew_num
    batch_num: batch_num
    tbatches: tbatches
    tbrand: tbrand
    tFV: tFV
    tstrtDATE: tstrtDATE
    tfinDATE: tfinDATE
    screen: screen

    TextBox:
        text: "All times must be in the format hhmm where hh is 00 to 23."
        pos_hint: {'x': .65, 'y': .97}

    TextBox:
    	text: "Brew #"
    	pos_hint: {'x': .01, 'y': .91}
    Data:
    	id: brew_num
    	size_hint: (.05, .03)
    	pos_hint: {'x': .08, 'y': .91}
        input_filter: 'int'

    TextBox:
    	text: "Batch #"
    	pos_hint: {'x': .01, 'y': .87}
    Data:
    	id: batch_num
    	size_hint: (.015, .03)
    	pos_hint: {'x': .08, 'y': .87}
        input_filter: 'int'
    TextBox:
        text: "of"
        pos_hint: {'x': .0985, 'y': .875}
        font_size: 15   
    Target:
        id: tbatches
        size_hint: (.015, .03)
        pos_hint: {'x': .11, 'y': .87}

    TextBox:
        text: "Brand"
        pos_hint: {'x': .01, 'y': .83}
    Target:
        id: tbrand
        pos_hint: {'x': .05, 'y': .83}
        size_hint: (.1, .03)

    TextBox:
        text: "FV"
        pos_hint: {'x': .01, 'y': .79}
    Target:
        id: tFV
        pos_hint: {'x': .05, 'y': .79}
        size_hint: (.1, .03)

    TextBox:
        text: "Start Date"
        pos_hint: {'x': .01, 'y': .75}
    Target:
        id: tstrtDATE
        pos_hint: {'x': .08, 'y': .75}
        size_hint: (.07, .03)

    TextBox:
        text: "End Date"
        pos_hint: {'x': .01, 'y': .71}
    Target:
        id: tfinDATE
        pos_hint: {'x': .08, 'y': .71}
        size_hint: (.07, .03)

    Spinner:
        id: screen
        size_hint: (.095, .075)
        pos_hint: {'x': .01, 'y': .6}
        values: ['mash_screen', 'boil_screen', 'knock_out_screen']
        text: 'blank_screen'
        font_size: 25

    Button:
        size_hint: (.095, .075)
        pos_hint: {'x': .01, 'y': .5}
        text: 'Load'
        font_size: 25
        on_press: app.root.change_screen()
        on_release: app.root.db_read()

    Button:
        size_hint: (.095, .075)
        pos_hint: {'x': .01, 'y': .4}
        text: 'Save'
        font_size: 25
        on_press: app.root.db_write()

    Button:
        size_hint: (.095, .075)
        pos_hint: {'x': .01, 'y': .25}
        font_size: 25
        on_press: app.root.previous_screen()
        on_release: app.root.db_read()

    Button:
        size_hint: (.095, .075)
        pos_hint: {'x': .01, 'y': .1}
        font_size: 25
        on_press: app.root.next_screen()
        on_release: app.root.db_read()
