#: include Formats.kv
#: include BlankScreen.kv
#: include MashScreen.kv
#: include BoilScreen.kv
#: include KoScreen.kv
#: include add_brew.kv
#: include add_process.kv

<Brew>:
    manager: manager
    blk1: blk1
    blk2: blk2
    blk3: blk3
    blk4: blk4
    ms1: ms1
    ms2: ms2
    ms3: ms3
    ms4: ms4
    bs1: bs1
    bs2: bs2
    bs3: bs3
    bs4: bs4
    ks1: ks1
    ks2: ks2
    ks3: ks3
    ks4: ks4
    ab: ab
    ap: ap
    do_default_tab: False
    stat: stat

    tab_width: 200

    # add a ScreenManager to the panel
    ScreenManager:
        id: manager

        BlankScreen:
            id: blk1
            name: 'blank_screen1'
        BlankScreen:
            id: blk2
            name: 'blank_screen2'
        BlankScreen:
            id: blk3
            name: 'blank_screen3'
        BlankScreen:
            id: blk4
            name: 'blank_screen4'

        MashScreen:
            id: ms1
            name: 'mash_screen1'
        MashScreen:
            id: ms2
            name: 'mash_screen2'
        MashScreen:
            id: ms3
            name: 'mash_screen3'
        MashScreen:
            id: ms4
            name: 'mash_screen4'

        BoilScreen:
            id: bs1
            name: 'boil_screen1'
        BoilScreen:
            id: bs2
            name: 'boil_screen2'
        BoilScreen:
            id: bs3
            name: 'boil_screen3'
        BoilScreen:
            id: bs4
            name: 'boil_screen4'

        KoScreen:
            id: ks1
            name: 'knock_out_screen1'
        KoScreen:
            id: ks2
            name: 'knock_out_screen2'
        KoScreen:
            id: ks3
            name: 'knock_out_screen3'
        KoScreen:
            id: ks4
            name: 'knock_out_screen4'

        add_brew:
            id: ab
            name: 'add_brew'

        add_process:
            id: ap
            name: 'add_process'

    TabbedPanelHeader:
        name: 'tab1'
        text: 'Tab 1'
    TabbedPanelHeader:
        name: 'tab2'
        text: 'Tab 2'
    TabbedPanelHeader:
        name: 'tab3'
        text: 'Tab 3'
    TabbedPanelHeader:
        name: 'tab4'
        text: 'Tab 4'    
    TabbedPanelHeader:
        name: 'tab5'
        text: 'Add Brew'
    TabbedPanelHeader:
        name: 'tab6'
        text: 'Add Process'

    Label:
        id: stat
        text: 'Status: BEER!!!'
        font_size: 30
        size_hint: (.98, .05)
        pos_hint: {'x': .01, 'y': .01}
        color: 0, 0, 0, 1
        bcolor: 1, 1, 1, 1
        canvas.before:
            Color:
                rgba: self.bcolor
            Rectangle:
                pos: self.pos
                size: self.size