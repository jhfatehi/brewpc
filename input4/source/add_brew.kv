<add_brew@Screen>:

    brew_num: brew_num
    brand: brand
    batches: batches
    fV: fV
    strtDATE: strtDATE
    finDATE: finDATE


    Label:
        size_hint: (.1, .03)
        pos_hint: {'x': .4, 'y': .1}
        font_size: 30
        text: 'Date format is yyyymmdd'


    Label:
        size_hint: (.1, .03)
        pos_hint: {'x': .4, 'y': .7}
        font_size: 30
        text: 'Brew Number:'
    TextInput:
        id: brew_num
        size_hint: (.1, .05)
        pos_hint: {'x': .55, 'y': .7}
        font_size: 30
        write_tab: False
        input_filter: 'int'

    Label:
        size_hint: (.1, .03)
        pos_hint: {'x': .4, 'y': .6}
        font_size: 30
        text: 'Brew Brand:'
    TextInput:
        id: brand
        size_hint: (.1, .05)
        pos_hint: {'x': .55, 'y': .6}
        font_size: 30
        write_tab: False

    Label:
        size_hint: (.1, .03)
        pos_hint: {'x': .4, 'y': .5}
        font_size: 30
        text: 'Number of Batches:'
    TextInput:
        id: batches
        size_hint: (.1, .05)
        pos_hint: {'x': .55, 'y': .5}
        font_size: 30
        write_tab: False
        input_filter: 'int'

    Label:
        size_hint: (.1, .03)
        pos_hint: {'x': .4, 'y': .4}
        font_size: 30
        text: 'FV:'
    TextInput:
        id: fV
        size_hint: (.1, .05)
        pos_hint: {'x': .55, 'y': .4}
        font_size: 30
        write_tab: False
        input_filter: 'int'

    Label:
        size_hint: (.1, .03)
        pos_hint: {'x': .4, 'y': .3}
        font_size: 30
        text: 'Start Date:'
    TextInput:
        id: strtDATE
        size_hint: (.1, .05)
        pos_hint: {'x': .55, 'y': .3}
        font_size: 30
        write_tab: False
        input_filter: 'int'

    Label:
        size_hint: (.1, .03)
        pos_hint: {'x': .4, 'y': .2}
        font_size: 30
        text: 'End Date:'
    TextInput:
        id: finDATE
        size_hint: (.1, .05)
        pos_hint: {'x': .55, 'y': .2}
        font_size: 30
        write_tab: False
        input_filter: 'int'

    Button:
        size_hint: (.095, .075)
        pos_hint: {'x': .01, 'y': .7}
        text: 'Create Brew'
        font_size: 30
        on_press: app.root.create_brew()