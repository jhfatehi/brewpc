<Screen1@Screen>:
	btn: btn
    data1: data1
    data2: data2
    data3: data3
	Button:
		id: btn
		size_hint: (.1, .1)
        pos_hint: {'x': .9, 'y': .9}
	    text: 'screen one'
	    on_press: app.root.change_screen()


    Button:
        id: write
        size_hint: (.1, .1)
        pos_hint: {'x': .9, 'y': .7}
        text: 'write'
        on_press: app.root.write()

    TextInput:
        id: data1
        size_hint: (.3, .06)
        pos_hint: {'x': .3, 'y': .8}

    TextInput:
        id: data2
        size_hint: (.3, .06)
        pos_hint: {'x': .3, 'y': .7}

    TextInput:
        id: data3
        size_hint: (.3, .06)
        pos_hint: {'x': .3, 'y': .6}