#: include BlankScreen.kv
#: include TestScreen.kv
#: include MashScreen.kv
#: include add_brew.kv

<Brew>:
    manager: manager
    ts1: ts1
    ts2: ts2
    ts3: ts3
    ab: ab
    blk1: blk1
    blk2: blk2
    blk3: blk3
    stat: stat
    do_default_tab: False
    ms1: ms1
    ms2: ms2
    ms3: ms3
    
    # add a ScreenManager to the panel
    ScreenManager:
        id: manager

        BlankScreen:
            id: blk1
            name: 'blank_screen1'
        BlankScreen:
            id: blk2
            name: 'blank_screen2'
        BlankScreen:
            id: blk3
            name: 'blank_screen3'
            
        TestScreen:
            id: ts1
            name: 'test_screen1'
        TestScreen:
            id: ts2
            name: 'test_screen2'
        TestScreen:
            id: ts3
            name: 'test_screen3'  

        MashScreen:
            id: ms1
            name: 'mash_screen1'
        MashScreen:
            id: ms2
            name: 'mash_screen2'
        MashScreen:
            id: ms3
            name: 'mash_screen3' 

        add_brew:
            id: ab
            name: 'add_brew'

    TabbedPanelHeader:
        name: 'tab1'
        text: 'Tab 1'
    TabbedPanelHeader:
        name: 'tab2'
        text: 'Tab 2'
    TabbedPanelHeader:
        name: 'tab3'
        text: 'Tab 3'
    TabbedPanelHeader:
        name: 'tab4'
        text: 'Add Brew'

    Label:
        id: stat
        text: 'Status: BEER!!!'
        size_hint: (.98, .1)
        pos_hint: {'x': .01, 'y': .01}
        color: 0, 0, 0, 1
        bcolor: 1, 1, 1, 1
        canvas.before:
            Color:
                rgba: self.bcolor
            Rectangle:
                pos: self.pos
                size: self.size