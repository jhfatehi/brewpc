#: include BlankScreen.kv

<TestScreen@BlankScreen>:
    data1: data1
    data2: data2
    data3: data3

    Label:
        size_hint: (.1, .03)
        pos_hint: {'x': .2, 'y': .8}
        text: 'data1:'
    TextInput:
        id: data1
        size_hint: (.3, .06)
        pos_hint: {'x': .3, 'y': .8}

    Label:
        size_hint: (.1, .03)
        pos_hint: {'x': .2, 'y': .7}
        text: 'data2:'
    TextInput:
        id: data2
        size_hint: (.3, .06)
        pos_hint: {'x': .3, 'y': .7}

    Label:
        size_hint: (.1, .03)
        pos_hint: {'x': .2, 'y': .6}
        text: 'data3:'
    TextInput:
        id: data3
        size_hint: (.3, .06)
        pos_hint: {'x': .3, 'y': .6}

    Button:
        id: wrt_btn
        size_hint: (.06, .06)
        pos_hint: {'x': .01, 'y': .6}
        text: 'Save'
        on_press: app.root.test_write()